//get file path from client system
function getNameFromPath(strFilepath) {
    var objRE = new RegExp(/([^\/\\]+)$/);
    var strName = objRE.exec(strFilepath);

    if (strName == null) {
        return null;
    }
    else {
        return strName[0];
    }
}

function checkfile() {

    // var IsFromLastPage = $("#hdnIsFromLastPage").val();
    // var _hdnFIleName = $("#hdn_FilePath").val();
    var file = getNameFromPath($("#File").val());
    //if (IsFromLastPage == "False") {

    if (file != null && file != "") {
        var extension = file.substr((file.lastIndexOf('.') + 1));
        switch (extension) {
            case 'doc':
            case 'docx':
            case 'txt':
            case 'pdf':
            case 'xls':
            case 'xlsx':
                flag = true;
                break;
            default:
                flag = false;
        }
        if (flag == false) {
            $("#spanfile").text("You can upload only doc/docx/txt/pdf/xls/xlsx extension file");
            return false;
        }
        else {
            var size = GetFileSize('File');
            if (size > 500000) {
                $("#spanfile").text("You can upload file up to 500 kB");
                return false;
            }
            else {
                $("#spanfile").text("");
            }
        }
    }

}
