$(function () {
    $("#File").change(function () {
        checkfile();
        if ($("#spanfile").text().length ==0) {
            var filename = this.value;
            var lastIndex = filename.lastIndexOf("\\");
            if (lastIndex >= 0) {
                filename = filename.substring(lastIndex + 1);
            }
            $('.uploadFile .filename').val(filename);
         
        }
    });
});
